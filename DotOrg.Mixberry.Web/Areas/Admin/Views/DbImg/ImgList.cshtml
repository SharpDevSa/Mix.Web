@model List<DotOrg.Mixberry.Web.Areas.Admin.Models.FileImg>

<table class="TableFileList list-table">
    <thead>
        <tr>
            <th>Изображение</th>
            <th>Группа</th>
            <th>
                Название
            </th>
            <th>
                Описание файла
            </th>
            <th>Сортировка</th>
            <th colspan="3">Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var img in Model)
        {
            <tr>
                <td>
                    <img src="~/DbImg/Download?FileId=@img.id" />
                </td>
                <td>
                    @img.GroupName
                </td>
                <td class="FileTitle">
                    @img.TitleFile
                </td>
                <td class="FileDescr">
                    <textarea disabled="disabled" rows="4" style="width:100%">
                        @img.Description
                    </textarea>
                </td>
                <td class="FileOrder">
                    @img.order
                </td>
                <td class="list-action actionCell">
                    <a class="list-action" href="DbImg/EditImg?id=@img.id" name="ReWriteFileLink"><span title="Редактировать" class="icon-pencil"></span></a>
                </td>
                <td class="list-action actionCell">
                    <a class="list-action" name="deleteFileLink" onclick="if(!confirm('Удалить объект?')) return false;" href="~/DbImg/DeleteFile?id=@img.id">
                        <span title="Удалить" class="icon-trash"></span>
                    </a>
                    @*<span href="~/DbImg/DeleteFile?id=@img.id" title="Удалить" class="icon-trash deleteFileLink"></span>*@
                </td>
                <td class="list-action actionCell">
                    <a href="~/DbImg/Download?FileId=@img.id" target="_blank" >Ссылка</a>
                </td>
            </tr>
        }
    </tbody>
</table>
